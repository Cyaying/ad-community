/* 顶部图片 */
.banner {
    display: flex;
    width: 100%;
}

.banner image {
    width: 100%;
    height: 380rpx;
}

/* 导航栏 */
.navbar_container {
    display: flex;
    flex-direction: column;
    height: 100%;
}

.navbar {
    flex: none;
    display: flex;
    font-size: 35rpx;
    color: rgb(153, 154, 170);
}

.navbar .item {
    position: relative;
    flex: auto;
    text-align: center;
    line-height: 120rpx;
}

.navbar .item.active {
    color: rgb(28, 29, 48);
    font-weight: bold;
}

.navbar .item.active::after {
    content: '';
    position: absolute;
    left: 45rpx;
    bottom: 20rpx;
    height: 2rpx;
    width: 40rpx;
    background-color: black;
}

/* 内容区 */
.content {
    height: 100%;
}

.content .content_item {
    display: flex;
    height: 240rpx;
    margin: 0 20rpx 10rpx 20rpx;
    border-radius: 10rpx 10rpx 30rpx 30rpx;
    box-shadow: 0rpx 25rpx 50rpx rgb(244, 244, 247);
    background-color: rgb(255, 255, 255);
}

.content .content_item .item_num {
    width: 60rpx;
}

.content .content_item .item_num image {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 45rpx;
    height: 45rpx;
    margin-top: 10rpx;
}

.content .content_item .item_content {
    display: flex;
    flex-direction: column;
    margin: 0rpx 50rpx 0 10rpx;
}

.content .content_item .item_content .content_top {
    margin-top: 10rpx;
    font-size: 35rpx;
    font-weight: bold;
    max-width: 570rpx;
    max-height: 45rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.content .content_item .item_content .content_mid {
    margin-top: 30rpx;
    font-size: 25rpx;
    display: -webkit-box;
    max-width: 570rpx;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}

.content .content_item .item_content .content_down {
    flex: none;
    position: absolute;
    display: flex;
    align-items: center;
    width: 605rpx;
    height: 50rpx;
    margin-top: 180rpx;
}

.content_down .down_text1 {
    font-size: 20rpx;
    color: rgb(153, 154, 170);
}

.content_down .content_down_right {
    flex: 1;
    text-align: right;
}

.content_down image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 20rpx;
}

.content_down .down_text2 {
    font-size: 20rpx;
    color: rgb(255, 66, 21);
}