page {
    background: url(https://s3.bmp.ovh/imgs/2021/09/44b4fad23a3f6b5c.png);
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}
.glass {
    background: linear-gradient(
        to right bottom,
        rgb(255, 255, 255, 0.1),
        rgba(255, 255, 255, 0.3)
    );
    backdrop-filter: blur(10rpx);
    border-radius: 50rpx;
    width: 600rpx;
    height: 850rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}
.title {
    width: 100%;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: white;
    font-size: 40rpx;
}
.imgList {
    width: 100%;
    height: 500rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.imgList .item {
    width: 400rpx;
    height: 400rpx;
    border: 5rpx dashed white;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.item .img {
    width: 100%;
    height: 100%;
}
.item .delImg {
    width: 100rpx;
    height: 100rpx;
    position: absolute;
    margin-bottom: 400rpx;
    margin-right: 400rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
.item .delImg image {
    width: 80rpx;
    height: 80rpx;
}
.item .add {
    width: 120rpx;
    height: 120rpx;
}
.butt {
    width: 100%;
    height: 200rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}
button {
    background-color: #d81f06;
    width: 400rpx;
    height: 80rpx;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50rpx;
}
.btnImg {
    margin-right: 10rpx;
    width: 60rpx;
    height: 60rpx;
}