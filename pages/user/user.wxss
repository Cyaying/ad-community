.user_container {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.user_avatar {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    border-style: solid;
    border-width: 1rpx;
    margin: 50rpx 0;
}
.user_nickName {
    font-style: initial;
}
.user_info {
    width: 600rpx;
    height: 600rpx;
    border-radius: 50rpx;
    box-shadow: 20rpx 20rpx 10rpx #888888;
    margin: 60rpx 0;
    background-color: white;
}
.item_1,.item_2,.item_3 {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center; 
    margin: 0 30rpx;
    width: 540rpx;
    height: 150rpx;
    border-bottom: solid 1rpx whitesmoke;
}
.item_4 {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    margin: 0 30rpx;
    width: 540rpx;
    height: 150rpx;
}
.img_1,.img_2,.img_3,.img_4,.img_arrow {
    display: table-cell;
    vertical-align: middle;
    margin-top: 8rpx;
    width: 50rpx;
    height: 50rpx;
}
.img_arrow {
    margin-right: 10rpx;
}
.item_3 text,.item_2 text,.item_1 text,.item_4 text {
    margin: 0 200rpx 0 50rpx;
    text-align: center;
}
.contact-btn {
    display: inline-block;
    position: absolute;
    /* width: 100%; */
    opacity: 0;
}